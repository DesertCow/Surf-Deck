<div class="container collapse" id="surfboardtable">
  <table class="table table-striped table-hover table-primary table-font">
    <thead>
      <tr>
        <th scope="col">id #</th>
        <th scope="col">Board #</th>
        <th scope="col">Brand</th>
        <th scope="col">Model</th>
        <th scope="col">Length (in)</th>
        <th scope="col">Checked Out</th>
        <th scope="col">Damaged</th>
        <th scope="col">Fin Setup</th>
        <th scope="col">Fin #</th>
        <th scope="col">Current Location</th>
      </tr>
    <tbody>
      {{#each surfboards as |surfboard|}}
      <tr>
        <td>{{surfboard.id}}</td>
        <td>{{surfboard.board_num}}</td>
        <td>{{surfboard.brand}}</td>
        <td>{{surfboard.board_model}}</td>
        <td>{{surfboard.length_inch}}</td>
        <td>{{surfboard.checked_out}}</td>
        <td>{{surfboard.damaged}}</td>
        <td>{{surfboard.fin_setup}}</td>
        <td>{{surfboard.fin_count}}</td>
        <td>{{surfboard.location_id}}</td>
      </tr>
      {{/each}}
    </tbody>
    </thead>
  </table>
</div>

<button class="btn btn-primary d-block" type="button" data-bs-toggle="collapse" data-bs-target="#surfboardtable"
  aria-expanded="false" aria-controls="collapseExample">
  toggle display: surfboard data table
</button>

<div class="container collapse" id="usertable">
  <table class="table table-striped table-hover table-primary table-font">
    <thead>
      <tr>
        <th scope="col">id #</th>
        <th scope="col">name</th>
        <th scope="col">email</th>
        <th scope="col">password</th>

      </tr>
    <tbody>
      {{#each users as |user|}}
      <tr>
        <td>{{user.id}}</td>
        <td>{{user.name}}</td>
        <td>{{user.email}}</td>
        <td>{{user.password}}</td>

      </tr>
      {{/each}}
    </tbody>
    </thead>
  </table>
</div>
<button class="btn btn-primary d-block" type="button" data-bs-toggle="collapse" data-bs-target="#usertable"
  aria-expanded="false" aria-controls="collapseExample">
  toggle display: user data table
</button>

<div class="container collapse" id="locationtable">
  <table class="table table-striped table-hover table-primary table-font">
    <thead>
      <tr>
        <th scope="col">id #</th>
        <th scope="col">city</th>
        <th scope="col">address</th>
        <th scope="col">phone number</th>
        <th scope="col">hours</th>
        <th scope="col">img</th>

      </tr>
    <tbody>
      {{#each locations as |location|}}
      <tr>
        <td>{{location.id}}</td>
        <td>{{location.city}}</td>
        <td>{{location.address}}</td>
        <td>{{location.phonenumber}}</td>
        <td>{{location.hours}}</td>
        <td>{{location.img}}</td>

      </tr>
      {{/each}}
    </tbody>
    </thead>
  </table>
</div>
<button class="btn btn-primary d-block" type="button" data-bs-toggle="collapse" data-bs-target="#locationtable"
  aria-expanded="false" aria-controls="collapseExample">
  toggle display: location data table
</button>



<form class="collapse" id="addboardForm">
  <div class="mb-3">
    <label for="addboardNumber" class="form-label">Surfboard Number</label>
    <input type="number" class="form-control" id="addboardNumber" aria-describedby="emailHelp">

  </div>
  <div class="mb-3">
    <label for="addboardBrand" class="form-label">Surfboard Brand</label>
    <input type="text" class="form-control" id="addboardBrand">
  </div>
  <div class="mb-3">
    <label for="addboardModel" class="form-label">Surfboard Model</label>
    <input type="text" class="form-control" id="addboardModel">
  </div>
  <div class="mb-3">
    <label for="addboardLength" class="form-label">Surfboard Length (inches)</label>
    <input type="number" class="form-control" id="addboardLength">
  </div>
  <div class="mb-3">
    <label for="addboardFinsetup" class="form-label">Surfboard Fin Setup</label>
    <input type="text" class="form-control" id="addboardFinsetup">
  </div>
  <div class="mb-3">
    <label for="addboardFincount" class="form-label">Surfboard Fin Count</label>
    <input type="number" class="form-control" id="addboardFincount">
  </div>

  <div class="mb-3">
    <label for="addboardLocation" class="form-label">Location ID</label>
    <input type="number" class="form-control" id="addboardLocation">
  </div>

  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="addboardCheckedout">
    <label class="form-check-label" for="addboardCheckedout">Added Surfboard is Checked out</label>
  </div>
  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="addboardDamaged">
    <label class="form-check-label" for="addboardDamaged">Added Surfboard is Damaged</label>
  </div>
  <button type="submit" class="btn btn-primary addboardBtn">Submit</button>
</form>
<button class="btn btn-primary d-block" type="button" data-bs-toggle="collapse" data-bs-target="#addboardForm"
  aria-expanded="false" aria-controls="collapseExample">
  toggle display: Add Board Form
</button>

<form class="collapse" id="deleteboardForm">
  <div class="mb-3">
    <label for="deleteboard" class="form-label">Enter the ID of the Board to be Deleted</label>
    <input type="number" class="form-control" id="deleteboard" aria-describedby="emailHelp">

  </div>
  <button type="submit" class="btn btn-primary deleteboardBtn">Submit</button>
</form>
<button class="btn btn-primary d-block" type="button" data-bs-toggle="collapse" data-bs-target="#deleteboardForm"
  aria-expanded="false" aria-controls="collapseExample">
  toggle display: Delete Board Form
</button>

